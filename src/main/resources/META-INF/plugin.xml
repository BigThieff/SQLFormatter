<idea-plugin>
    <id>com.bling.SQLFormatter</id>
    <name>SQLFormatter</name>
    <vendor email="support@xxx.com" url="https://www.yourcompany.com">xxx</vendor>
    <description>SQL Formatter for MyBatis Mapper XML。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。</description>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <action id="FormatSqlAction"
                class="com.bling.sqlformatter.FormatSqlAction"
                text="Format SQL"
                description="Format SQL in MyBatis Mapper XML">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt F"/>
        </action>
    </actions>

    <idea-version since-build="241" until-build="241.*"/>
</idea-plugin>